    @GetMapping("/test-db")
    public String testDatabase() {
        try {
            // Probar conexi√≥n a la base de datos
            jdbcTemplate.execute("SELECT 1");
            return "‚úÖ CONEXI√ìN EXITOSA - MySQL MUNAYKA funcionando!";
        } catch (Exception e) {
            return "‚ùå ERROR de conexi√≥n: " + e.getMessage();
        }
    }

    @GetMapping("/test")
    public String test() {
        return "üöÄ Backend MUNAYKA activo - Listo para desarrollar!";
    }
}